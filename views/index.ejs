<%- include("partials/header.ejs") %>
<main class="page landing-page">
  <section
    class="clean-block clean-hero"
    style="
      color: rgba(9, 162, 255, 0.2);
      background: url('/images/headers/landing.jpg') center / cover no-repeat;
      border-color: rgba(9, 162, 255, 0.32);
    "
  >
    <div class="text">
      <h2><strong>Alfa Cycling Team</strong><br /></h2>
      <p>See us in action, celebrating, suffering or having fun.<br /></p>
      <a class="btn btn-outline-light btn-lg" role="button" href="/about"
        >Learn More</a
      >
    </div>
  </section>
  <section class="clean-block clean-info dark">
    <div class="container">
      <div class="block-heading">
        <h2 class="text-info">Latest blog post</h2>
      </div>
      <% if(blogs) {%> <% blogs.forEach((blog, blogs) => { %>
      <div class="row align-items-center">
        <div class="col-md-6">
          <img class="img-thumbnail" src="<%= blog.image %>" />
        </div>
        <div class="col-md-6">
          <h3><%= blog.title %></h3>
          <div class="getting-started-info">
            <p><%- blog.body.substring(0,200) %>...</p>
          </div>
          <a class="action" href="/blogs/<%=blog.id%>">
            <button class="btn btn-outline-primary btn-lg" type="button">
              Read
            </button>
          </a>
        </div>
      </div>
      <% }) %> <% } %>
    </div>
  </section>
  <section
    class="d-xl-flex justify-content-xl-center align-items-xl-center clean-block features"
    style="padding-bottom: 0"
  >
    <div
      class="container justify-content-xl-center align-items-xl-end"
      style="padding-bottom: 0"
    >
      <div class="block-heading" style="padding-bottom: 80px">
        <h2 class="text-info" style="margin-bottom: 50px">Sponsors</h2>
        <div class="d-flex justify-content-xl-center">
          <a href="#">
            <img
              src="/images/sponsors_b&w/alpescapital_logo.png"
              style="width: 100px; margin: 0 20px; opacity: 0.5" /><img
              src="/images/sponsors_b&w/cookworld_logo.png"
              style="width: 100px; margin: 0 20px; opacity: 0.5" /><img
              src="/images/sponsors_b&w/drugstore_logo.png"
              style="width: 100px; margin: 0 20px; opacity: 0.5" /><img
              src="/images/sponsors_b&w/fgi_logo.png"
              style="width: 150px; margin: 0 20px; opacity: 0.5" /><img
              src="/images/sponsors_b&w/petrolko_logo.png"
              style="width: 150px; margin: 0 20px; opacity: 0.5" /><img
              src="/images/sponsors_b&w/physiogold_logo.png"
              style="width: 100px; margin: 0 20px; opacity: 0.5" /><img
              src="/images/sponsors_b&w/whitebox_logo.png"
              style="width: 100px; margin: 0 20px; opacity: 0.5"
          /></a>
        </div>
      </div>
    </div>
  </section>
  <section class="clean-block slider dark">
    <div class="container">
      <div class="block-heading">
        <h2 class="text-info">Racing Action</h2>
      </div>
      <div class="carousel slide" data-ride="carousel" id="carousel-1">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              class="w-100 d-block"
              src="/images/landing_carousel/carousel3.jpg"
              alt="Slide Image"
            />
          </div>
          <div class="carousel-item">
            <img
              class="w-100 d-block"
              src="/images/landing_carousel/carousel1.jpg"
              alt="Slide Image"
            />
          </div>
          <div class="carousel-item">
            <img
              class="w-100 d-block"
              src="/images/landing_carousel/carousel2.jpg"
              alt="Slide Image"
            />
          </div>
        </div>
        <div>
          <a
            class="carousel-control-prev"
            href="#carousel-1"
            role="button"
            data-slide="prev"
            ><span class="carousel-control-prev-icon"></span
            ><span class="sr-only">Previous</span></a
          ><a
            class="carousel-control-next"
            href="#carousel-1"
            role="button"
            data-slide="next"
            ><span class="carousel-control-next-icon"></span
            ><span class="sr-only">Next</span></a
          >
        </div>
        <ol class="carousel-indicators">
          <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-1" data-slide-to="1"></li>
          <li data-target="#carousel-1" data-slide-to="2"></li>
        </ol>
      </div>
    </div>
  </section>
</main>
<%- include("partials/footer.ejs") %>
