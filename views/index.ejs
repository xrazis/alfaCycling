<%- include("partials/header.ejs") %>

<header class="masthead" style="background-image:url('img/headers/index-bg.jpg');">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-lg-8 mx-auto">
        <div class="site-heading">
          <h1 style="font-size: 77px;">Alfa Cycling Team</h1><span class="subheading">See us in action, celebrating,
            suffering or having fun.<br></span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8">
      <% if(blogs) {%>
      <% blogs.forEach((blog, blogs) => { %>
      <div class="post-preview">
        <a href="/blogs/<%=blog.id%>">
          <h2 class="post-title"><%= blog.title %></h2>
          <h3 class="post-subtitle"><%- blog.body.substring(0,70) %>...</h3>
        </a>
        <p class="post-meta"><%= blog.created.toDateString() %></p>
      </div>
      <hr>
      <% }) %>
      <% } %>
      <div class="clearfix"><a href="/blogs"><button class="btn btn-primary float-right" type="button">All
