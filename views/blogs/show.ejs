<%- include("../partials/header.ejs") %>

<main class="page blog-post">
  <section class="clean-block clean-post dark">
    <div class="container">
      <div class="block-content">
        <div
          class="post-image"
          style="background-image: url('<%= blog[0].image %>')"
        ></div>
        <div class="post-body">
          <h3><%= blog[0].title %></h3>
          <div class="post-info">
            <span>By <%= blog[0].posted_by %></span
            ><span><%= blog[0].created.toDateString() %></span>
          </div>
          <h4><%= blog[0].subtitle %></h4>

          <p><%-blog[0].body %></p>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include("../partials/footer.ejs") %>
