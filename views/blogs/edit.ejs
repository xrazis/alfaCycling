  <%- include("../partials/header.ejs") %>

  <script src="https://cdn.tiny.cloud/1/<%-tiny_api%>/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
  <script>tinymce.init({selector:'textarea'});</script>

      <main class="page contact-us-page">
        <section class="clean-block clean-form dark">
            <div class="container">
                <div class="block-heading">
                    <h2 class="text-info">Edit Blog Post</h2>
                    <p>Edit an existing blog post. Refer to docs.</p>
                </div>
                <form style="max-width: 80%;" method="POST" action="/blogs/<%=blog_id%>?_method=PUT" enctype="multipart/form-data">
                    <div class="form-group"><label>Blog Title</label><input class="form-control" type="text" name="title" value="<%= blog[0].title%>"></div>
                    <div class="form-group"><label>Subtitle</label><input class="form-control" type="text" name="subtitle" value="<%= blog[0].subtitle%>"></div>
                    <div class="form-group"><label>Body</label><textarea class="form-control form-control-lg" name="body" style="height: 15rem;"><%- blog[0].body%></textarea></div>
                    <div class="form-group"><label>Header Photo</label><small style="margin-left: 10px;">Choose the Blog header photo</small><input class="float-right" type="file" name="image"></div>
                    <!-- <div class="form-group"><label>Blog Photos</label><small style="margin-left: 10px;">Choose the Blog post photos</small><input class="float-right" type="file"></div> -->
                    <div class="form-group"><button class="btn btn-warning btn-block" type="submit">Edit</button></div>
                </form>
            </div>
        </section>
    </main>

  <%- include("../partials/footer.ejs") %>